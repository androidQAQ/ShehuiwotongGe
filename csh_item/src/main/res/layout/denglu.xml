<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bw.csh_item.activity.Login2Activity">
    <ImageView
        android:onClick="btn_backup"
        android:id="@+id/my_phone_return"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/my12return"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:text="帮助"
        android:textColor="#000"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/my_phone_helper" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/taobao"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />
    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:id="@+id/my_phone_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号/用户名/邮箱"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="78dp" />
    <EditText
        android:layout_marginTop="15dp"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/my_phone_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:password="true"
        android:id="@+id/my_phone_password"
        android:drawableRight="@mipmap/eye1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="忘记密码"
        android:id="@+id/my_phone_forget"
        android:layout_below="@+id/my_phone_password"
        android:layout_alignLeft="@+id/my_phone_helper"
        android:layout_alignStart="@+id/my_phone_helper"
        android:layout_marginTop="12dp" />
    <Button
        android:id="@+id/my_phone_login"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登    录"
        android:textColor="#fff"
        android:textSize="25dp"
        android:background="@drawable/shape"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/my_phone_forget"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
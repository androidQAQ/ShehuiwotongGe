<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:onClick="btnBack"
        android:id="@+id/my_return"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/my12return"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:text="帮助"
        android:textColor="#000"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/my_helper" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/taobao"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />
    <Button
        android:onClick="btnLogin"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登    录"
        android:textSize="25dp"
        android:id="@+id/my_login"
        android:textColor="#fff"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/my_register"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新用户注册"
        android:layout_marginTop="38dp"
        android:textColor="#ffaf8a"
        android:layout_below="@+id/my_login"
        android:layout_alignLeft="@+id/my_login"
        android:layout_alignStart="@+id/my_login" />
    <TextView
        android:gravity="center"
        android:id="@+id/my_pay"
        android:drawableLeft="@mipmap/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝账户快速登录"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>